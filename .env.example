# Lemon Squeezy Configuration
# Get these from your Lemon Squeezy dashboard: https://app.lemonsqueezy.com/

# API Key (from Settings > API)
LEMONSQUEEZY_API_KEY=your_api_key_here

# Store ID (from your store settings)
LEMONSQUEEZY_STORE_ID=123456

# Webhook Secret (from Settings > Webhooks)
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here

# Subscription Products
# Create these products in Lemon Squeezy dashboard first
LEMONSQUEEZY_BASIC_PRODUCT_ID=111111
LEMONSQUEEZY_BASIC_VARIANT_ID=222222

LEMONSQUEEZY_PRO_PRODUCT_ID=333333
LEMONSQUEEZY_PRO_VARIANT_ID=444444

LEMONSQUEEZY_FIRM_PRODUCT_ID=555555
LEMONSQUEEZY_FIRM_VARIANT_ID=666666

# Packet Products (one-time purchases)
LEMONSQUEEZY_TRAFFIC_PACKET_ID=777777
LEMONSQUEEZY_EVICTION_PACKET_ID=888888
LEMONSQUEEZY_EXPUNGEMENT_PACKET_ID=999999
LEMONSQUEEZY_DL_PACKET_ID=101010
LEMONSQUEEZY_FORECLOSURE_PACKET_ID=111111

# Database (optional - for user management)
DATABASE_URL=your_database_url

# Session secret
SESSION_SECRET=your_random_secret_key

# App URL
NEXT_PUBLIC_APP_URL=https://jurist-diction-main.vercel.app
